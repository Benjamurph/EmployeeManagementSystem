@model EmployeeManagementSystem.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Employees";
}

<!-- Small boxes (Stat box) -->
<div class="row" style="padding-top: 20px">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box" style="background-color: #2c5495; border: #2c5495">
            <div class="inner">
                <h3 style="color: rgba(255, 255, 255, .8)">@Html.DisplayFor(model => model.Employees)</h3>

                <p style="color: rgba(255, 255, 255, .8)">Employees</p>
            </div>
            <div class="icon">
                <i class="ion ion-android-people" style="color: rgba(255, 255, 255, .8)"></i>
            </div>
            <a asp-controller="Employees" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box" style="background-color: #2c5495; border: #2c5495">
            <div class="inner">
                <h3 style="color: rgba(255, 255, 255, .8)">@Html.DisplayFor(model => model.JobApplications)</h3>

                <p style="color: rgba(255, 255, 255, .8)">Pending Job Applications</p>
            </div>
            <div class="icon">
                <i class="ion ion-briefcase" style="color: rgba(255, 255, 255, .8)"></i>
            </div>
            <a asp-controller="JobBoards" asp-action="JobIndex" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box" style="background-color: #2c5495; border: #2c5495">
            <div class="inner">
                <h3 style="color: rgba(255, 255, 255, .8)">@Html.DisplayFor(model => model.Users)</h3>

                <p style="color: rgba(255, 255, 255, .8)">Users</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add" style="color: rgba(255, 255, 255, .8)"></i>
            </div>
            <a asp-controller="Users" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box" style="background-color: #2c5495; border: #2c5495">
            <div class="inner">
                <h3 style="color: rgba(255, 255, 255, .8)">@Html.DisplayFor(model => model.LeaveApplications)</h3>

                <p style="color: rgba(255, 255, 255, .8)">Pending Leave Applications</p>
            </div>
            <div class="icon">
                <i class="ion ion-android-alarm-clock" style="color: rgba(255, 255, 255, .8)"></i>
            </div>
            <a asp-controller="LeaveApplications" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
